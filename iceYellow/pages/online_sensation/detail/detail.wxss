/* pages/online_sensation/detail/detail.wxss */

.online_detail image {
    width: 100%;
}

.online_detail .placeholder {
    font-size: 24px;
    color: #ff0000;
}

.online_detail ._title {
    font-size: 16px !important;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.online_detail ._sale_info {
    font-size: 14px;
    color: #999999;
}

.online_detail .footer {
    position: fixed;
    width: 100%;
    bottom: 0;
}

.round-click {
    height: 64px;
    width: 64px;
    /*background-image: url('../../../images/shop.png');*/
    border-radius: 100%;
    position: fixed;
    top: 90px;
    right: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9;
}

.round-click navigator {
    font-size: 32px;
    max-width: 80px;
    color: #fff;
    text-align: center;
}
